<div class="col-md-6 mx-auto">
    <div class="car">
        <div class="card-header">
            <h2>Nuevo Cliente</h3>
        </div>
        <div class="card-body">
            <form action="/addclients" method="POST">

                <div class="form-group">
                    <input type="text" name="nit" class="form-control" placeholder="Nit" autofocus>
                </div>

                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Nombre" >
                </div>

                <div class="form-group">
                    <input type="text" name="city" class="form-control" placeholder="Ciudad">
                </div>

                <div class="form-group">
                    <input name="address" class="form-control" placeholder="Direccion">
                </div>

                <div class="form-group">
                    <input type="number" name="phoneNumber" class="form-control" placeholder="Telefono Contacto">
                </div>

                <div class="form-group">
                    <input type="email" name="email" class="form-control" placeholder="Correo" autofocus>
                </div>



                <div class="form-group d-grid gap-2">
                        <button  class="btn-block btn btn-primary " type="submit" >
                            Guardar
                        </button>
                </div>
                <div class="form-group d-grid gap-2" >
                        <a href="/clients" class="btn btn-danger"> Cancelar</a>
    
                </div>
            </form>
        </div>
    </div>
</div>